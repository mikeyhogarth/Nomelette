<h1>Listing Books</h1>

<%= render "admin/shared/admin_navigation" %>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= link_to 'Show', [:admin, book] %></td>
    <td><%= link_to 'Edit', edit_admin_book_path(book) %></td>
    <td><%= link_to 'Destroy', [:admin,book], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

