<% page_title(@category.name) %>
<% page_description("Recipes in the #{@category.name} category.") %>

<%= content_for :main_area do %>

	<% if @category.recipes.any? %>
		<ul class = "recipe-list">
			<%= render @category.recipes.order("name ASC") %>			
		</ul>
	<% else %>
		<%= content_tag(:p, "Sorry, no recipes in this category") %>
	<% end %>
	
<% end %>